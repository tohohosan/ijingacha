<div class = 'container'>
  <div class = 'child'>
    <% if @denki.present? %>
      <h2><%= @denki.name %></h2>
        <%= image_tag "#{@denki.image_url}", width: '200', height: '220'  %>
      <div>
      <br>
      <table>
        <tr class="center">
        <th>生没年</th>
        <td><%= @denki.year %></td>
        </tr>
        <tr class="center">
          <th>出身地</th>
          <td><%= @denki.birthplace %></td>
        </tr>
        <tr class="left">
          <th>説明</th>
          <td><%= simple_format(@denki.description) %></td>
        </tr>
    </table>
      </div>
      <div>
      <br>
      </div>
      <br><br>
      <div class="buttons">
        <%= link_to denki_path, class: "show_btn other" do %>
          <i class="fa-solid fa-book-open"></i> 次の伝記
        <% end %>
        <%= link_to "https://twitter.com/intent/tweet?text=#{ERB::Util.url_encode("#{@denki.name} のぷち伝記を読んだよ！｜ぷち伝記")} &url=https://petite-denki.onrender.com &hashtags=ぷち伝記", class: "show_btn share" do %>
          <i class="fa-solid fa-x"></i> シェア
        <% end %>
      </div>
      <div class="buttons wiki_center">
        <%= link_to "https://ja.wikipedia.org/wiki/#{@denki.name}", class: "show_btn wiki" do %>
          <i class="fa-solid fa-globe"></i> Wiki
        <% end %>
      </div>
      <br>
    <% else %>
      <h2>伝記が見つからないよ！</h2>
    <% end %>
  </div>
</div>

